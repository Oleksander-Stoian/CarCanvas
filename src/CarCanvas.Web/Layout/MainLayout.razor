@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="app-layout">
    <header class="app-header">
        <div class="header-brand">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"/><circle cx="7" cy="17" r="2"/><circle cx="17" cy="17" r="2"/></svg>
            CarCanvas
        </div>
        
        <div class="header-actions flex items-center gap-2">
            <button class="btn-secondary-modern" @onclick="ToggleTheme" title="Toggle Theme">
                @if (isDark)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/></svg>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
                }
            </button>
            <a href="https://github.com/your-repo" target="_blank" class="btn-secondary-modern">
                GitHub
            </a>
        </div>
    </header>

    <main class="app-main">
        @Body
    </main>
</div>

@code {
    private bool isDark = false;

    private async Task ToggleTheme()
    {
        isDark = !isDark;
        await JSRuntime.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", isDark ? "dark" : "light");
    }
}
